@model Category

<h1>Delete Category</h1>

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="form-group">
        <label asp-for="Name" class="form-label mt-4">Category Name</label>
        <input type="text" disabled class="form-control" asp-for="Name" placeholder="Enter category name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="DisplayOrder" class="form-label mt-4">Display Order</label>
        <input type="text" disabled class="form-control" asp-for="DisplayOrder" placeholder="Display Order">
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Go Back</a>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}